srcdir=@srcdir@
VPATH=@srcdir@
prefix=@prefix@
SBINDIR=$(prefix)/sbin
CC=@CC@
CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@ -I.
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@

BIN=mathopd
OBJS=	base64.o cgi.o config.o core.o dummy.o imap.o log.o main.o \
	redirect.o request.o util.o
DEPENDS=mathopd.h config.h Makefile

all: $(BIN)
install: $(BIN)
	install -c $(BIN) $(SBINDIR)
$(BIN): $(OBJS)
	$(CC) $(LDFLAGS) -o $(BIN) $(OBJS) $(LIBS)
$(OBJS): $(DEPENDS)
.c.o:
	$(CC) -c $(CFLAGS) $(CPPFLAGS) $< -o $@
clean:
	rm -f $(BIN) $(OBJS)
distclean: clean
	rm -f config.log config.h config.cache config.status Makefile
.PHONY: install clean distclean
